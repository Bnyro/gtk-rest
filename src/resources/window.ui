<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="adw" version="1.0" />
  <requires lib="sourceview5" version="5.0" />
  <template class="GtkRestWindow" parent="AdwApplicationWindow">
    <property name="default-width">900</property>
    <property name="default-height">600</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkHeaderBar" id="headerbar">
            <child type="start">
              <object class="GtkMenuButton">
                <property name="icon-name">list-add-symbolic</property>
                <property name="menu-model">create_menu</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-top">20</property>
            <property name="margin-start">20</property>
            <property name="margin-end">20</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="margin-bottom">40</property>
                <child>
                  <object class="GtkDropDown" id="workspaces">
                    <property name="model">
                      <object class="GtkStringList" id="workspaces_model" />
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="new_workspace_name">
                    <property name="placeholder-text">Workspace name</property>
                    <property name="margin-start">10</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="create_workspace">
                    <property name="label">Create</property>
                    <property name="margin-start">10</property>
                  </object>
                </child>
                <child>
                  <object class="GtkDropDown" id="requests">
                    <property name="model">
                      <object class="GtkStringList" id="requests_model" />
                    </property>
                    <property name="margin-start">30</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="new_request_name">
                    <property name="placeholder-text">Request name</property>
                    <property name="margin-start">10</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="create_request">
                    <property name="label">Create</property>
                    <property name="margin-start">10</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <child>
                  <object class="GtkDropDown" id="method">
                    <property name="model">
                      <object class="GtkStringList">
                        <items>
                          <item>GET</item>
                          <item>POST</item>
                          <item>PUT</item>
                          <item>PATCH</item>
                          <item>DELETE</item>
                          <item>HEAD</item>
                        </items>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="url">
                    <property name="margin-start">10</property>
                    <property name="text">https://httpbin.org/anything</property>
                    <property name="placeholder-text">http://example.com/api</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="send">
                    <signal name="clicked" handler="handle_send" swapped="true" />
                    <property name="label">Send</property>
                    <property name="margin-start">10</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="margin-top">20</property>
            <property name="margin-start">20</property>
            <property name="margin-end">20</property>
            <child>
              <object class="GtkStackSwitcher">
                <property name="stack">stack</property>
              </object>
            </child>
            <child>
              <object class="GtkStack" id="stack">
                <property name="transition-type">crossfade</property>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">body</property>
                    <property name="title" translatable="yes">Body</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="margin-top">20</property>
                        <property name="margin-bottom">20</property>
                        <property name="orientation">horizontal</property>
                        <child>
                          <object class="GtkCheckButton" id="isjsonbody">
                            <property name="label">JSON</property>
                            <property name="margin-end">15</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkEntry" id="body">
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="format_body">
                            <property name="label">Format</property>
                            <property name="margin-start">10</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">headers</property>
                    <property name="title" translatable="yes">Headers</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkBox" id="headers">
                            <property name="valign">start</property>
                            <property name="orientation">vertical</property>
                            <property name="margin-top">10</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="add_header">
                            <property name="label">Add header</property>
                            <property name="margin-top">10</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStackPage">
                    <property name="name">queries</property>
                    <property name="title" translatable="yes">Queries</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <child>
                          <object class="GtkBox" id="queries">
                            <property name="valign">start</property>
                            <property name="orientation">vertical</property>
                            <property name="margin-top">10</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="add_query">
                            <property name="label">Add query</property>
                            <property name="margin-top">10</property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow">
            <property name="vexpand">true</property>
            <property name="margin-top">10</property>
            <property name="margin-start">10</property>
            <property name="margin-end">10</property>
            <property name="margin-bottom">20</property>
            <child>
              <object class="GtkSourceView" id="response">
                <property name="editable">false</property>
                <property name="wrap-mode">word</property>
                <property name="visible">True</property>
                <property name="can-focus">True</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
                <property name="monospace">True</property>
                <property name="left-margin">12</property>
                <property name="top-margin">12</property>
                <property name="bottom-margin">12</property>
                <property name="right-margin">12</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Gtk-rest</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <menu id="create_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Create Workspace</attribute>
        <attribute name="action">win.create_workspace</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Create Request</attribute>
        <attribute name="action">win.create_request</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Add header</attribute>
        <attribute name="action">win.add_header</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Add query</attribute>
        <attribute name="action">win.add_query</attribute>
      </item>
    </section>
  </menu>
</interface>